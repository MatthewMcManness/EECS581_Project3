ScreenManager:
    id: screen_manager
    CalendarView:
    ToDoListView:

<CalendarView>:
    name: "calendar"
    BoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: "Calendar View"
            halign: "center"
            size_hint_y: 0.6

        # TODO: Add a grid or list for displaying days of the month. (Mariam)
        # You can use a GridLayout to organize day buttons or labels dynamically.

        BoxLayout:
            size_hint_y: 0.2
            MDFlatButton:
                text: "Open Add Event Popup"
                on_release: app.open_add_event_window()

        BoxLayout:
            size_hint_y: 0.2
            MDFlatButton:
                text: "To To-Do List"
                on_release: app.switch_to_screen("todo")

<ToDoListView>:
    name: "todo"
    BoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: "To-Do List View"
            halign: "center"
            size_hint_y: 0.6

        # TODO: Add a scrollable list of tasks here. (Manvir)
        # You can use MDList with ScrollView to display multiple task items.

        BoxLayout:
            size_hint_y: 0.2
            MDFlatButton:
                text: "Open Add Task Popup"
                on_release: app.open_add_task_window()

        BoxLayout:
            size_hint_y: 0.2
            MDFlatButton:
                text: "To Calendar"
                on_release: app.switch_to_screen("calendar")
