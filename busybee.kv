ScreenManager:
    id: screen_manager
    CalendarView:
    ToDoListView:

<CalendarView>:
    name: "calendar"
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Calendar View"
            halign: "center"
            size_hint_y: 0.6

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Open Add Event Popup"
                on_release: app.open_add_event_modal()

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "To To-Do List"
                on_release: app.switch_to_screen("todo")

<ToDoListView>:
    name: "todo"
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "To-Do List View"
            halign: "center"
            size_hint_y: 0.6

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Open Add Task Popup"
                on_release: app.open_add_task_modal()

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "To Calendar"
                on_release: app.switch_to_screen("calendar")
